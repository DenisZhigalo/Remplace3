<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Fullscreen">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ToolbarContainer">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@color/colorToolbar</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginStart">?actionBarSize</item>
        <item name="android:layout_marginEnd">?actionBarSize</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">@dimen/indent_medium</item>
    </style>

    <style name="ToolbarBack">
        <item name="android:layout_width">?actionBarSize</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/indent_large</item>
        <item name="android:focusable">true</item>
        <item name="srcCompat">@drawable/ic_arrow_back_24dp</item>
    </style>

    <style name="ClickableBackground">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/background_ripple</item>
    </style>

</resources>
